<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:PocketLib.Pages"
             x:Class="PocketLib.Pages.AuthorPage"
             Title="AuthorPage">
    <ScrollView>
        <StackLayout>

            <controls:HeaderView
            Label="Auteur"
            Image1="monochrome_arrow_up_arrow_down.svg"
            ActionCommand="{Binding GoBackCommand}"
            >

            </controls:HeaderView>

            <BoxView HeightRequest="0.5" Color="LightGray"/>

            <controls:SearchBarView/>

            <BoxView HeightRequest="0.5" Color="LightGray"/>

            <controls:ButtonView
            Label="Alain Damasio"
            Image="monochrome_book.svg"
            Count="2"
         />

            <BoxView HeightRequest="0.5" Color="LightGray" Margin="57,0,0,0"/>

            <controls:ButtonView
            Label="Cixin Lui"
            Image="monochrome_book.svg"
            Count="1"
         />

            <BoxView HeightRequest="0.5" Color="LightGray"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
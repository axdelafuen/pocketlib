<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:PocketLib.Pages.Views"
             x:Class="PocketLib.Pages.DatePage"
             Shell.NavBarIsVisible="True"
             Title="DatePage">

    <Shell.TitleView>
        <controls:HeaderView
            Label="Date de publication"
            Image1="monochrome_arrow_up_arrow_down.svg"
            Image2="plus.svg"
            >
        </controls:HeaderView>
    </Shell.TitleView>

    <ScrollView>
        <StackLayout>

            <BoxView HeightRequest="0.5" Color="LightGray"/>

            <controls:SearchBarView/>

            <BoxView HeightRequest="0.5" Color="LightGray"/>

            <controls:ButtonView
                Label="2022"
                Image="monochrome_book.svg"
                Count="1"
             />

            <BoxView HeightRequest="0.5" Color="LightGray" Margin="57,0,0,0"/>

            <controls:ButtonView
                Label="2021"
                Image="monochrome_book.svg"
                Count="1"
             />

            <BoxView HeightRequest="0.5" Color="LightGray"/>
        </StackLayout>
    </ScrollView>
</ContentPage>


<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PocketLib.Pages.Views"
             xmlns:pages="clr-namespace:PocketLib.Pages"
             x:Class="PocketLib.Pages.ListPage"
             Shell.NavBarIsVisible="True"
             Title="Tous">

    <Shell.TitleView>
        <views:HeaderView
            Label="Tous"
            Image1="monochrome_arrow_up_arrow_down.svg"
            Image2="plus.svg"
            >
        </views:HeaderView>
    </Shell.TitleView>
    
    <ListView ItemsSource="{Binding Mgr.Books}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <views:PreviewView
                        Image="{Binding ImageSmall}"
                        Title="{Binding Title}"
                        Author="Moi meme"
                        Status="Non lu"
                        ActionCommand="{Binding GoToNavigationCommand}"
                        ActionCommandParameter="{pages:DetailsPage}"
                    />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>